@page
@model CNSVM.Pages.Doctors.DetailsModel
@{
}

<h2 class="text-center display-4 mt-4">Detalles del Doctor</h2>

@if (Model.Doctordetail == null)
{
    <div class="alert alert-danger text-center mt-4" role="alert">
        <i class="bi bi-exclamation-circle-fill"></i> No se encontraron detalles para el doctor.
    </div>
}
else
{
    <!-- Información del doctor -->
    <div class="card shadow-lg p-4 mb-5 bg-white rounded">
        <div class="card-body">
            <h3 class="text-primary mb-4">@Model.Doctordetail.Name @Model.Doctordetail.FirstName @Model.Doctordetail.LastName</h3>
            <hr class="mb-3">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Especialidad:</strong> <span class="badge bg-info fs-5">@Model.Doctordetail.Specialty</span></p>
                    <p><strong>Correo Electrónico:</strong> <span class="badge bg-info fs-5">@Model.Doctordetail.Email</span></p>
                </div>
                <div class="col-md-6">
                    <p><strong>Grupo Médico:</strong> <span class="badge bg-info fs-5">@(Model.doctorG ?? "No asignado")</span></p>
                </div>
            </div>
        </div>
    </div>

  
}