@page
@model CNSVM.Pages.Patients.IndexModel
@{
}
<h2 class="text-center display-4">Pacientes</h2>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form method="get" asp-action="Index">
            <div class="input-group">
                <input type="search" class="form-control form-control-lg" placeholder="Buscar paciente..." name="searchQuery" value="@Model.SearchQuery">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-lg btn-default">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.Pacientes != null && Model.Pacientes.Any())
{
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre Completo</th>
                    <th style="width: 100px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var paciente in Model.Pacientes)
                {
                    <tr>
                        <td>@paciente.nombre</td>
                        <td><a asp-page="Details" asp-route-id="@paciente.matricula" class="btn btn-primary">Detalles</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No hay Pacientes disponibles.
    </div>
}
