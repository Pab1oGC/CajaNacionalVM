@page
@model CNSVM.Pages.Patients.IndexModel
@{
}
<h2 class="text-center display-4">Pacientes</h2>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form method="get" asp-action="Index">
            <div class="input-group">
                <input type="search" class="form-control form-control-lg" placeholder="Buscar paciente..." value="@ViewData["searchQuery"]">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-lg btn-default">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.Patients != null && Model.Patients.Any())
{
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th style="width: 100px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Patient in Model.Patients)
                {
                    <tr>
                        <td>@Patient.Name</td>
                        <td><a asp-page="Details" asp-route-id="@Patient.PatientId" class="btn btn-primary">Details</a></td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No hay Pacientes disponibles para este paciente.
    </div>
}